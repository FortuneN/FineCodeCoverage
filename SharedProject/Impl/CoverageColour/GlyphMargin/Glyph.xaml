<UserControl x:Class="FineCodeCoverage.Impl.Glyph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FineCodeCoverage.Impl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:SolidBrushColorConverter x:Key="SolidBrushColorConverter"/>
    </UserControl.Resources>
    <Rectangle Width="3" Height="16" Fill="{Binding Colour, Converter={StaticResource ResourceKey=SolidBrushColorConverter}}"/>
</UserControl>
